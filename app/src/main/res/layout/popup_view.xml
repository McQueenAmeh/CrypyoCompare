<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">


            <TextView
                android:text="Currency"
                android:textColor="@color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cryptoSpinner"
                android:layout_alignStart="@+id/cryptoCurrencyTextView"
                android:layout_marginTop="30dp"
                android:id="@+id/currencyTextView" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cryptoSpinner"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/cryptoCurrencyTextView"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currencySpinner"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/currencyTextView"
                android:layout_alignParentStart="true" />

            <Button
                android:text="CONFIRM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:layout_below="@+id/currencySpinner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crypto Currency"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"
                android:id="@+id/cryptoCurrencyTextView"
                android:paddingTop="5dp"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>